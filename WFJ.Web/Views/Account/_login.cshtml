@model WFJ.Models.LoginViewModel
@{
    ViewBag.Title = "_login";
}
<style type="text/css">
    .field-validation-error {
        color: red;
    }
</style>
<div>
    <div style="float:right;color:red;">
        @Html.DisplayFor(m => m.ErrorMessage)
    </div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @autocomplete = "off" }))
    {
        <div class="form-group mb-3">
            <label for="emailaddress">Username / Email address</label>
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Enter your Username / Email address", @class = "form-control login-text" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group mb-3">
            <label for="password">Password</label>
            @Html.TextBoxFor(m => m.Password, new { @type = "password", @placeholder = "Enter your password", @class = "form-control login-text" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group mb-3">
            <div class="custom-control custom-checkbox">
                @Html.CheckBoxFor(m => m.UserCookieCheck, new { @id = "checkbox-signin", @class = "custom-control-input"})
                <label class="custom-control-label" for="checkbox-signin"> Remember me</label>
            </div>
        </div>

        <div class="form-group mb-0">
            <button class="btn btn-primary" type="submit">Log In</button>
        </div>
        <div class="mt-2">
            <a href="javascript:void(0)" id="goToforgotPassword" class="anchor-design">Forgot Your Password</a>
        </div>
    }

</div>
